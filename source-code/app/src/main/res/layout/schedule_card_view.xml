<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/talk_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/talk_image"
                android:scaleType="centerCrop"
                android:alpha="0.8"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/placeholder_1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/talk_name"
                android:alpha="0.6"
                android:elevation="1dp"
                android:id="@+id/talk_shade"
                android:src="#000000"
                android:layout_alignTop="@+id/talk_name"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/talk_name"
                android:padding="8dp"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:elevation="4dp"
                android:alpha="0.6"
                android:gravity="center_horizontal|center_vertical"
                android:layout_alignBottom="@+id/talk_image"
                android:text="Talk#1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/talk_time"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/talk_image"
                android:text="10:00AM - 11:00 AM"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/talk_location"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/talk_time"
                android:text="Albert Hall"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/talk_desc_short"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/talk_location"
                android:text="Lorem ipsum datum hexum.."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/talk_desc_short"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_weight="0.5"
                    android:layout_marginRight="80dp"
                    android:id="@+id/reminder"
                    android:text="Reminder"
                    android:textColor="#1E88E5"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_weight="0.5"
                    android:id="@+id/read_more"
                    android:text="Read More"
                    android:textColor="#1E88E5"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.buildmlearn.mconference.conference.About">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main.appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_image"
            android:src="@drawable/placeholder_1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|top" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/conference_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CFD8DC"
                android:text="Conference Name"
                android:textSize="25dp"
                android:layout_marginRight="74dp"
                android:paddingLeft="23dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"/>

            <TextView
                android:id="@+id/conference_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conference_name"
                android:text="@string/lorem"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="18dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/conference_desc"
                android:background="#000000"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <Button
                android:id="@+id/schedule_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:text="@string/title_schedule"
                android:textColor="#ffffff"
                android:background="#448AFF"
                android:padding="15dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="24dp"
            app:layout_anchor="@id/about_image"
            app:layout_anchorGravity="bottom|right|end"/>


    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
